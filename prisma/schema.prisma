generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id       Int       @id @default(autoincrement())
  nome     String
  ra       String    @unique
  curso    Curso?    @relation(fields: [cursoId], references: [id])
  cursoId  Int?
  materias Materia[]
}

model Curso {
  id       Int       @id @default(autoincrement())
  nome     String
  campoId  Int
  campo    Campo     @relation(fields: [campoId], references: [id])
  alunos   Aluno[]
  materias Materia[]
}

model Campo {
  id     Int     @id @default(autoincrement())
  nome   String
  cursos Curso[]
}

model Materia {
  id      Int    @id @default(autoincrement())
  nome    String
  curso   Curso  @relation(fields: [cursoId], references: [id])
  cursoId Int
  aluno   Aluno? @relation(fields: [alunoId], references: [id])
  alunoId Int?
}
